@model IEnumerable<專題.Models.EFModels.ChatRoomAutoReply>

@{
    ViewBag.Title = "Index";
}

<h2>聊天室自動回覆</h2>

<p>
    @Html.ActionLink("新增", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AutoReply.AutoReplyContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChatRoom.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SentTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AutoReply.AutoReplyContent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChatRoom.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SentTime)
        </td>
        <td>
            @Html.ActionLink("詳細內容", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
